<%
var buildScript = '';
var startScript = '';
var deployScript = '';
var testScript = '';

if (has.gulp ) {
  buildScript = 'gulp --no-watch';
  startScript = 'gulp';
  deployScript = 'gulp deloy';
  testScript = 'gulp test';
}

-%>
{
  "name": "<%= props.name %>",
  "version": "0.0.1",
  "description": "",
  "license": "",
  "repository": "",
  "author": {
    "name": "",
    "email": "",
    "url": ""
  },
  "scripts": {
    "build": "<%= buildScript %>",
    "start": "<%= startScript %>",
    "deploy": "<%= deployScript %>",
    "test": "<%= testScript %>"
  },
  "dependencies": {
<% npm.forEach(function (dep, idx) { -%>
    "<%= dep %>": "<%= versions[dep] %>"<%= (idx+1 < npm.length) ? ',' : '' %>
<% }); -%>
  },
  "devDependencies": {
<% npmDev.forEach(function (dep, idx) { -%>
    "<%= dep %>": "<%= versions[dep] %>"<%= (idx+1 < npmDev.length) ? ',' : '' %>
<% }); -%>
  }
}
